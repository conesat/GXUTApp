<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="100dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.hg.gxutapp.view.RoundImageView
            android:id="@+id/host_class_img"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:src="@drawable/main_bg" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/host_class_title"
                android:layout_weight="1"
                android:text="标题"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/host_class_techer"
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:text="讲师:张三"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/host_class_more"
                    android:src="@drawable/more_point"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="#eee"
        android:layout_width="match_parent"
        android:layout_height="2px"></LinearLayout>
</LinearLayout>
