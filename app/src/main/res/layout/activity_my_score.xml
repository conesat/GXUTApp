<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context=".activity.MyScoreActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#62cdf1"
        android:padding="10dp">

        <ImageView
            android:id="@+id/my_score_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="我的成绩"
            android:textColor="#fff"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp">

        <TextView
            android:id="@+id/my_score_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名:   学号:   绩点:" />
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#eee" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#eee" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="学期"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#eee" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="课程名称"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#eee" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="类别"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#eee" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="学分"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#eee" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="平时"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#eee" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="期中"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#eee" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="期末"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#eee" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="总评成绩"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#eee" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="考试性质"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#eee" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="绩点"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#eee" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#eee" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/my_score_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">



                </LinearLayout>
            </ScrollView>

        </LinearLayout>


    </HorizontalScrollView>


</LinearLayout>